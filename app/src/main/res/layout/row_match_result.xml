<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/match_border"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_team_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PSG"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_name_2"
            app:layout_constraintTop_toTopOf="@+id/tv_team_name_1" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/img_logo_1"
            android:layout_width="@dimen/recent_team_size"
            android:layout_height="@dimen/recent_team_size"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/barcelona" />

    <ImageView
            android:id="@+id/img_logo_2"
            android:layout_width="@dimen/recent_team_size"
            android:layout_height="@dimen/recent_team_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_logo_1"
            app:srcCompat="@drawable/psg" />

    <TextView
            android:id="@+id/edt_score_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
            android:id="@+id/edt_score_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
            android:id="@+id/tv_player_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Taihandsome"
            app:layout_constraintStart_toEndOf="@+id/img_logo_1"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_team_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcelona"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_player_name_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_name_1" />

    <TextView
            android:id="@+id/tv_player_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Tuan Phan"
            app:layout_constraintEnd_toStartOf="@+id/img_logo_2"
            app:layout_constraintTop_toTopOf="@+id/tv_player_name_1" />

    <ImageView
            android:id="@+id/img_red_1"
            android:layout_width="@dimen/red_card_width"
            android:layout_height="@dimen/red_card_height"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tv_player_name_1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/red" />

    <ImageView
            android:id="@+id/img_red_2"
            android:layout_width="@dimen/red_card_width"
            android:layout_height="@dimen/red_card_height"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_player_name_2"
            app:layout_constraintTop_toTopOf="@+id/tv_player_name_2"
            app:srcCompat="@color/red" />

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Thá»© 5, 20-01"
            android:textColor="#ABC966"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_point_1" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="+50"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date" />

    <TextView
            android:id="@+id/tv_point_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="-50"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date" />

    <View
            android:id="@+id/tv_point_1"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@color/devider_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>